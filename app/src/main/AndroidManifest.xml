<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mohammadicenter.com.mohammadicdcenter"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ico"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mohammadicenter.com.mohammadicdcenter.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="mohammadicenter.com.mohammadicdcenter.activities.VideosLectures"
            android:screenOrientation="portrait" />
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.SplashScreen"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.VisitWebsite"
            android:screenOrientation="portrait"
            />
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.MainActivities"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.DataGridView"
            android:screenOrientation="portrait" />
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.NewMainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.VideoListDataGrid"
            android:screenOrientation="portrait"
            />
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.WatchVideo"

            />
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.ContactUs"
            android:screenOrientation="portrait">

            </activity>
        <activity android:name="mohammadicenter.com.mohammadicdcenter.activities.Activities.FacebookPage"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>